{
  "manifest_version": 3,
  "name": "Focus Guard",
  "version": "1.0",
  "description": "AI-powered semantic drift detector to keep you on track.",
  "permissions": ["activeTab", "scripting", "storage", "alarms"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Guard"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
